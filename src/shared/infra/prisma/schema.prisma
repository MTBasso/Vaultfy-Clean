generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["linux-musl", "windows", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  username  String
  email     String   @unique
  password  String
  secret    String
  vault     Vault[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Vault {
  id         String       @id @default(cuid())
  name       String
  credential Credential[]
  User       User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String
}

model Credential {
  id       String @id @default(cuid())
  service  String
  username String
  password String
  Vault    Vault  @relation(fields: [vaultId], references: [id], onDelete: Cascade)
  vaultId  String
}
